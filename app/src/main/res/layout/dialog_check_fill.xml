<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_padding_top_bottom"
    android:paddingLeft="@dimen/dialog_padding_left_right"
    android:paddingRight="@dimen/dialog_padding_left_right"
    android:paddingTop="@dimen/dialog_padding_top_bottom">

    <EditText
        android:id="@+id/txt_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_medium"
        android:background="@drawable/rounded_edit_view"
        android:hint="請輸入內容"
        android:imeOptions="actionDone"
        android:maxEms="256"
        android:padding="@dimen/text_padding_large"
        android:singleLine="true"
        android:textSize="@dimen/text_size_medium" />

    <Spinner
        android:id="@+id/sp_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_medium"
        android:background="@drawable/gradient_spinner" />

</LinearLayout>