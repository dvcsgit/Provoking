<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/navbar_btn_background_selected_press" />

            <stroke
                android:width="1dp"
                android:color="@color/navbar_btn_stroke_selected" />
            <corners android:radius="@dimen/nav_corner_radius" />

        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/navbar_btn_background_selected_press" />

            <stroke
                android:width="1dp"
                android:color="@color/navbar_btn_stroke_selected" />
            <corners android:radius="@dimen/nav_corner_radius" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/navbar_btn_background_selected" />

            <stroke
                android:width="1dp"
                android:color="@color/navbar_btn_stroke_selected" />
            <corners android:radius="@dimen/nav_corner_radius" />

        </shape>
    </item>

</selector>