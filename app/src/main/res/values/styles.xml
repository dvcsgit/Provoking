<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_selector_darker</item>
    </style>

    <style name="Primary2Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_selector_primary2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseEditView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/text_padding_large</item>
    </style>

    <style name="DisableButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_selector_default</item>
    </style>

    <style name="AbnormalFormTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/text_padding_medium</item>
        <item name="android:paddingBottom">@dimen/text_padding_medium</item>
    </style>

</resources>
